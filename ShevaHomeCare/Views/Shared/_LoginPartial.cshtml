@using Microsoft.AspNetCore.Identity
@using ShevaHomeCare.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="right menu">
        
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="item">Hello @UserManager.GetUserName(User)!</a>
           
                <button type="submit" class="bg-primary">Log out</button>
            
    </form>
}
else
{
    
    <div class="right menu">
        <a asp-area="" asp-controller="Account" asp-action="Register" class="item">Sign Up</a>
        <a asp-area="" asp-controller="Account" asp-action="Login" class="item">Login</a>
    </div>
}
